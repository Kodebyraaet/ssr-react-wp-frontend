{
    "version": 2,
    "builds": [
        { "src": "next.config.js", "use": "@now/next" }
    ],
    "build": {
        "env": {
          "API_BASE": "https://ssrwp-cms.kbhq.no"
        }
    },   
    "routes": [
        { "src": "/_next/static/(?:[^/]+/pages|chunks|runtime)/.+", "headers": { "cache-control": "immutable" } },
        { "src": "/pl", "dest": "/?lang=pl" },
        { "src": "/pl/(?<slug>[^/]+)", "dest": "/?lang=pl&slug=$slug" },
        { "src": "/(?<slug>[^/]+)", "dest": "/?slug=$slug" }
    ]
}